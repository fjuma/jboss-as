<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="undertow-elytron-security" xmlns="urn:jboss:galleon:feature-group:1.0">
    <!-- Map jboss-web.xml security-domain 'other' to the Elytron ApplicationDomain -->
    <feature spec="subsystem.undertow">
        <feature spec="subsystem.undertow.server">
            <param name="server" value="default-server" />
            <feature spec="subsystem.undertow.server.https-listener">
                <unset param="security-realm" />
                <param name="ssl-context" value="applicationSSC"/>
                <param name="https-listener" value="https"/>
                <param name="enable-http2" value="true"/>
                <param name="socket-binding" value="https"/>
                <unset param="worker"/>
                <unset param="buffer-pool"/>
            </feature>
        </feature>
        <feature spec="subsystem.undertow.application-security-domain">
            <param name="application-security-domain" value="other" />
            <param name="security-domain" value="ApplicationDomain"/>
        </feature>
    </feature>
</feature-group-spec>
